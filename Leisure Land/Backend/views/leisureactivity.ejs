<%- include('include/_header') %>
<section style="align-items: center;">
    <div class="container heading-container" >
        <div class="row">
            <div class="column">
                <h1>Leisure Activities</h1>
            </div>
        </div>
    
    
    <div class="createnew-btn" >
        <a class="btn btn-primary m-3" href="/create-leisureactivity" role="button">Create New<span class="text-gradient"> <i class="fa-solid fa-user"></i></span></a>
        
</div> 
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <% if (message){ %>
                    <div class="alert alert-success alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-lablel="close"></button>
                    
                <strong><%= message.message %></strong>
                </div> <% } %>
                    
                    
                 
                <div class="table-responsive table">

                    <% if (leisure != '') { %>
                        <table class="table table-striped">
                            <thead>
                                <tr class="table-primary">
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    
                                    <th>Phone</th>
                                    
                                    <th>Price</th>
                                     
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- for(var i = 0; i<users.length; i++) -->
                               <%  for(var i = 0; i<leisure.length; i++){ %>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <!-- '/uploads/' + accomodation[i].image %> -->
                                    
                                    <td>
                                        <% if (leisure.image) { %>
                                            
                                            <img src="data:<%=leisure[i].image.contentType %>;base64,<%= leisure[i].image.data.toString('base64')%>" width="100" />
                                            <% } else { %>
                                            Uploaded
                                            <% } %>

                                            
                                            <!-- /<%= leisure[i].id %> -->
                                    </td>
                                    <td><%= leisure[i].title %></td>
                                    <td><%= leisure[i].description %></td>
                                    <td><%= leisure[i].phone %></td>
                                    <td><%= leisure[i].price %></td>
                        
                                    
                                    
                                    
                                    <td>
                                        <form method="POST" action="/update-leisure/<%= leisure[i]._id%>?_method=UPDATE">
                                            <button type="submit"><i class="fas fa-edit fa-lg mx-1 btn"></i></button>
                                            
                                          </form>
                                        </td>
                        
                                        <td>
                                        <form method="POST" action="/delete-leisure/<%= leisure[i]._id %>?_method=DELETE">
                                            <button type="submit"> <i class="fa-sharp fa-solid fa-trash btn" style="color:red"></i></button>
                                           
                                          </form>
                                        
                                        </td>
                                </tr>
                               <% } %>
                            </tbody>
                        </table>
                    <% } else {%>
                        <h2 class="text-center text-secondary mt-3"> No services found</h2>

                        <% } %>
                    

                </div>
    
            </div>
        </div>
    </div>
</section>


<%- include('include/_footer') %> 